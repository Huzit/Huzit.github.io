<div class="language-kotlin highlighter-rouge"><div class="highlight"><pre class="highlight"><code><span class="k">import</span> <span class="nn">java.util.*</span>

<span class="k">fun</span> <span class="nf">main</span><span class="p">(){</span>
    <span class="kd">val</span> <span class="py">scan</span> <span class="p">=</span> <span class="nc">Scanner</span><span class="p">(</span><span class="nc">System</span><span class="p">.</span><span class="n">`in`</span><span class="p">)</span>
    <span class="kd">val</span> <span class="py">n</span> <span class="p">=</span> <span class="n">scan</span><span class="p">.</span><span class="nf">next</span><span class="p">()</span>
    <span class="c1">//변환할 진수를 넣어준다.</span>
    <span class="nf">print</span><span class="p">(</span><span class="n">n</span><span class="p">.</span><span class="nf">toInt</span><span class="p">(</span><span class="mi">16</span><span class="p">))</span>
<span class="p">}</span>
